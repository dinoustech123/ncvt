<%- include("../components/header") %>

<section class="  pt-5 pb-5">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="login_form">
          <form action="/api/forgotPassword" method="post" class=" form_text">

            <div class="forgot_password_text text-center mb-5">
                   <span>LOGIN OR REGISTRATION</span>
                   <p>Sign in to your account to continue.</p>
            </div>

            <label for="">Mobile*</label>
            <div class="input-group mb-2">
              <span class="input-group-text" id="basic-addon1"><i class="bi bi-key-fill"></i></span>
              <input type="number" class="form-control form_control" name="mobile" id=""
                placeholder="Mobile" aria-label="Username" aria-describedby="basic-addon1" required>
            </div>
          
            <div class=" forgot_sing_bttn  mt-5"><button type="submit">Request OTP</button></div>
            <p><%= message.error ? message.error[0] : "" %> </p>
            <div class=" registerd_text text-center mt-5">
              <p><a href="signup">Back to Login</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>



</section>




